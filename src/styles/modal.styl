.modal
    display flex
    justify-content center
    align-items center
    position fixed
    height 100%
    width 100%
    background-color #6360608c

    &__content
        position relative
        display flex
        height 700px
        width 900px
        background-color #ffffff
        padding 60px 40px
        border-radius 5px

        i
            position absolute 
            right 0
            top 3px
            cursor pointer
            color #585555

    &__msg
        display flex
        height 100%
        width 100%

        p
            margin auto
            font-size 20px
            font-weight 14px

    &-list
        display flex
        flex-direction column
        align-items center
        width 100%
        overflow-y scroll

        &__item
            display flex
            flex-direction row
            flex-wrap nowrap
            justify-content space-between
            align-items center
            width 700px
            min-height 50px
            padding 14px
            border-radius 5px

            &:hover
                background-color #84828229